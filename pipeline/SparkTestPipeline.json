{
	"name": "SparkTestPipeline",
	"properties": {
		"description": "Pipeline to test Spark",
		"activities": [
			{
				"name": "SparkWordCount",
				"description": "Node reads data from ADLS and does word count",
				"type": "HDInsightSpark",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"rootPath": "spark/scripts",
					"entryFilePath": "WordCount_Spark.py",
					"sparkJobLinkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					}
				},
				"linkedServiceName": {
					"referenceName": "AzureStaticHDInsightCluster",
					"type": "LinkedServiceReference"
				}
			}
		],
		"concurrency": 1,
		"annotations": []
	}
}